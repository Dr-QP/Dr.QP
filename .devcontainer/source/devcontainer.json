{
  "name": "ROS 2 jazzy from source",
  "remoteUser": "rosdev",
  "build": {
    "dockerfile": "../../scripts/ros/desktop/ros-desktop.dockerfile",
    "context": "../../scripts/ros",
    "args": {
      "USERNAME": "rosdev"
    },
    "cacheFrom": "ghcr.io/dr-qp/cache-jazzy-ros-devcontainer:arm64",
    "cacheTo":  "ghcr.io/dr-qp/cache-jazzy-ros-devcontainer:arm64"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        // Open the /home/rosdev/ros2_ws/Dr.QP.code-workspace to install the recommended extensions
      ]
    }
  },
  "workspaceFolder": "/home/rosdev/ros2_ws/",
  "workspaceMount": "source=${localWorkspaceFolder},target=/home/rosdev/ros2_ws/,type=bind",
  "containerEnv": {
    // For local dev, allows to use SSH keys from 1password
    // "SSH_AUTH_SOCK": "/home/rosdev/.1password/agent.sock"
  },
  "mounts": [
    // For local dev, allows to use SSH keys from 1password
    // {
    //   "type": "bind",
    //   "source": "${localEnv:HOME}/.1password/",
    //   "target": "/home/rosdev/.1password/"
    // },
    // {
    //   "type": "bind",
    //   "source": "${localEnv:HOME}/.ssh/",
    //   "target": "/home/rosdev/.ssh/"
    // }
  ],
  "runArgs": [
    "--network", "host",
    "--ipc", "host",
    "--pid", "host",
    // , "--device", "/dev/ttySC0" // For local dev, breaks CI if left uncommented

    "--mount", "type=volume,source=drqp-ansible,target=/home/rosdev/ros2_ws/.ansible",
    "--mount", "type=volume,source=drqp-clangd-cache,target=/home/rosdev/ros2_ws/.cache",
    "--mount", "type=volume,source=drqp-colcon-build,target=/home/rosdev/ros2_ws/build",
    "--mount", "type=volume,source=drqp-colcon-install,target=/home/rosdev/ros2_ws/install",
    "--mount", "type=volume,source=drqp-colcon-lcov,target=/home/rosdev/ros2_ws/lcov",
    "--mount", "type=volume,source=drqp-colcon-log,target=/home/rosdev/ros2_ws/log",
    "--mount", "type=volume,source=drqp-docs-build,target=/home/rosdev/ros2_ws/docs/_build",
    "--mount", "type=volume,source=drqp-python-micromamba,target=/home/rosdev/ros2_ws/.micromamba",
    "--mount", "type=volume,source=drqp-python-venv,target=/home/rosdev/ros2_ws/.venv",
  ],
  "postCreateCommand": "sudo chown rosdev:rosdev /home/rosdev/ros2_ws/.ansible /home/rosdev/ros2_ws/.cache /home/rosdev/ros2_ws/build /home/rosdev/ros2_ws/install /home/rosdev/ros2_ws/lcov /home/rosdev/ros2_ws/log /home/rosdev/ros2_ws/docs/_build /home/rosdev/ros2_ws/.micromamba /home/rosdev/ros2_ws/.venv && python3 -m venv /home/rosdev/ros2_ws/.venv && /home/rosdev/ros2_ws/.venv/bin/python3 -m pip install -r /home/rosdev/ros2_ws/requirements.txt",
  "features": {
  }
}
