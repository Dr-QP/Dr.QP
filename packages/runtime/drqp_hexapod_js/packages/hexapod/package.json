{
    "name": "hexapod",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "@serialport/bindings-cpp": "^13.0.1",
        "express": "^4.20.0",
        "hexapod-kinematics-library": "0.0.5",
        "johnny-five": "^2.1.0",
        "plotly.js-gl3d-dist-min": "^1.54.7",
        "rclnodejs": "^0.30.0",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-icons": "^3.10.0",
        "react-plotly.js": "^2.4.0",
        "react-router-dom": "^5.2.0",
        "react-scripts": "3.4.4",
        "serve": "^14.2.4",
        "socket.io": "^4.6.2",
        "socket.io-client": "^3.0.5"
    },
    "overrides": {
        "@serialport/bindings": {
            "@serialport/bindings-cpp": "^13.0.1"
        }
    },
    "scripts": {
        "build-prod": "env NODE_OPTIONS=--openssl-legacy-provider yarn react-scripts build",
        "build-dev": "",
        "start-client-dev": "env NODE_OPTIONS=--openssl-legacy-provider yarn react-scripts start",
        "start-client-prod": "env NODE_OPTIONS=--openssl-legacy-provider yarn serve -s build; echo Ignoring the args:",
        "start-server": "node ./server/index.js",
        "start-kill-server": "yarn kill-server; yarn start-server",
        "kill-server": "fuser -k 4001/tcp",
        "start-dev": "concurrently -n \"server,client\" \"yarn start-kill-server\" \"yarn start-client-dev\"",
        "start-prod": "concurrently -n \"server,client\" \"yarn start-kill-server {@}\" \"yarn start-client-prod\""
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "concurrently": "^9.1.2",
        "env": "^0.0.2",
        "jest": "^24.9.0",
        "prettier": "2.0.5"
    }
}
